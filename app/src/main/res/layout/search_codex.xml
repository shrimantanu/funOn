<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="8dp"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selec"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/stock"
            android:layout_alignParentLeft="true"
            android:text="Select Quantity"



            />
        <ImageView
            android:id="@+id/stockst"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:maxLines="1"

            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/stock"
            android:paddingRight="8dp"
            android:layout_toLeftOf="@id/stockst"
            android:layout_width="wrap_content"

            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="(Stock:2)" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0.8sp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/linear1">

            <TextView
                android:id="@+id/medname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crocin-Tab"
                android:textSize="17sp"
                android:textColor="@color/color_button_dark"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pkg: "
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/pkg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weight"
                    android:textColor="@color/color_button_dark" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear1"
            android:paddingVertical="5dp"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >
              <!--  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="PTR: "
                    />
-->
                <TextView
                    android:id="@+id/ptrdialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 45.8"

                    android:textColor="@color/color_button_dark"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:id="@+id/mrplabel"
                    android:text="MRP: "
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/mrpdialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 53.8"
                    android:textColor="@color/color_button_dark"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Quantity: "
            />


        <ImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_remove_circle_outline_black_24dp" />
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:inputType="number"
            android:id="@+id/qty"
            android:textSize="12dp"
            />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"

            android:src="@drawable/ic_add_circle_blue_24dp" />
    </LinearLayout>

 <!--   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock"
        android:background="@color/greeninv"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_marginVertical="7dp"

        />
-->

</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancelact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/confirm"
            android:paddingHorizontal="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="7dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="Confirm"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingVertical="7dp"
            android:textColor="@color/color_button_dark" />


    </RelativeLayout>

</LinearLayout>