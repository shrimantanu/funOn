<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="3dp"
        android:id="@+id/relative0">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backto"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearfilter"
            android:padding="5dp"

            android:layout_marginRight="15dp"
            android:text="Clear Filter  "
            android:drawableRight="@drawable/ic_clear_all_black_24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            >
          <!--  <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/upload"
                android:src="@drawable/ic_image_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venue Name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Vname"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venue Location"
                android:drawableRight="@drawable/ic_location_on_black_24dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/VLoc"
                android:layout_height="wrap_content" />
-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allowed Events"/>

            <CheckBox
                android:id="@+id/t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday Party" />

            <CheckBox
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theamed Party" />
            <CheckBox
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pool Party" />

            <CheckBox    android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cocktail Party" />
            <CheckBox   android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marriages" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking"/>

            <RadioGroup
                android:id="@+id/parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                >

                <RadioButton
                    android:id="@+id/par0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/par1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:checked="true"/>


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Furniture"/>
            <CheckBox    android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chairs" />
            <CheckBox   android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tables" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Terms"/>
            <CheckBox    android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer liable for damages" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/addv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimaryDark"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:text="Filter"
                    android:textColor="#ffffff" />


            </RelativeLayout>



        </LinearLayout>
    </ScrollView>





</LinearLayout>