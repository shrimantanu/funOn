<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/chemist_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:contentPadding="4dp"
        android:layout_below="@+id/tt"
        android:foreground="?selectableItemBackground"
        android:elevation="2dp"
        android:background="@color/color_button_dark"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/au7"
                android:textColor="@color/grey_800"/>
            <TextView
                android:id="@+id/offerhint"
                android:layout_below="@+id/offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/au8"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/offerhint"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/paytm"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:text="Apply"
            android:layout_below="@+id/offerhint"
            android:layout_alignParentRight="true"
            android:id="@+id/apply"
            android:background="@drawable/btnbackblue"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>