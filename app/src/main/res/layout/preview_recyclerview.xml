<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dist"
        android:background="@color/selected"
        >
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Lucky Pharmaceuticals\nPvt. Ltd."
    android:textSize="18sp"
    android:maxLines="2"
    android:textColor="#ffffff"
    android:id="@+id/distname"
    android:paddingLeft="7dp"

    />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/distname"
            android:layout_marginTop="5dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:layout_marginLeft="5dp"
                android:id="@+id/pickup"
                android:buttonTint="@color/white"
                android:textColor="#ffffff"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:layout_marginLeft="15dp"
                android:id="@+id/delivery"
                android:buttonTint="@color/white"
                android:textColor="#ffffff"
                android:checked="true"
                />

        </RadioGroup>

    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/errorlay"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error"
                android:gravity="center_horizontal"
                android:id="@+id/error"
                android:textColor="#e22430"
                android:background="#d2facaca"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Add More"
                android:gravity="center_horizontal"
                android:id="@+id/add"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:layout_below="@id/errorlay"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:id="@+id/t1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/errorlay"
            android:id="@+id/total"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/t1"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_toLeftOf="@id/placeorder"
            android:layout_height="30dp"
            android:progressTint="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:max="500"
            android:progress="0"
            android:layout_below="@id/errorlay"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/placeorder"
            android:layout_below="@id/errorlay"
            android:src="@drawable/ic_pending"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:id="@+id/pending"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btnbackbluedark"
            android:text="Place Order"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
            android:textColor="@color/white"
            android:id="@+id/placeorder"
            android:layout_below="@id/errorlay"
            android:paddingHorizontal="15dp"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>