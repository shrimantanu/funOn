<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ordersuccess"
    android:visibility="gone"
    >

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_check_green_24dp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="$500"
            android:textColor="@color/color_button_dark2"
            android:textSize="40sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/orderplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@+id/amount"
            android:textColor="@color/color_button_dark"
            android:text="Order Placed Successfully"/>

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/orderplace"
            android:layout_centerHorizontal="true"
            android:background="@drawable/searchbackborder"
            android:text="Done" />
    </RelativeLayout>

   <!-- <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_below="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:weightSum="4">
        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card1"
            android:visibility="visible">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <ImageView
                        android:id="@+id/paytm"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:background="@drawable/paytmlogo"/>

                    <ImageView
                        android:id="@+id/visa"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:background="@drawable/visa"/>

                    <ImageView
                        android:id="@+id/mastercard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:background="@drawable/mastercard"/>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</RelativeLayout>

<RelativeLayout
    android:id="@+id/preview"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/laytotal"
        android:orientation="vertical"
        >

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/lv"
            android:indeterminateTint="@color/colorAccentt"
            android:max="100"
            android:progress="45"
            android:visibility="gone" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/laytotal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/laytotal_back"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total: â‚¹ "
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:id="@+id/t1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18sp"
                android:maxLength="9"
                android:id="@+id/total"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/t1"
                />

            <View
                style="@style/Divider"
                android:layout_marginTop="4dp"
                android:id="@+id/divider"
                android:layout_marginBottom="4dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="Place All"
                android:layout_toRightOf="@id/divider"
                android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
                android:textColor="@color/white"
                android:id="@+id/placeorder"
                android:paddingHorizontal="15dp"
                android:layout_marginVertical="6dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:progressTint="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="500"
        android:progress="0"
        />
</RelativeLayout>
</RelativeLayout>