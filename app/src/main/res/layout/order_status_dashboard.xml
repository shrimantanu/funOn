<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:indeterminateTint="@color/colorAccentt"
        android:max="100"
        android:progress="45"
        android:layout_marginTop="-5dp"
        android:visibility="gone" />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_above="@id/lvhighlight"
        android:layout_below="@id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/lvhighlight"
        >
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorP"
            android:id="@+id/color1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placed"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/color1"
            android:id="@+id/tv1"
            />
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorP"
            android:id="@+id/color2"
            android:layout_below="@id/color1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Accepted"
            android:textSize="12sp"
            android:layout_below="@id/color1"
            android:layout_toRightOf="@id/color2"
            android:id="@+id/tv2"
            />
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorP"
            android:id="@+id/color3"
            android:layout_below="@id/color2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoiced"
            android:layout_below="@id/tv2"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/color3"
            android:id="@+id/tv3"
            />
        <View
            android:layout_width="17dp"
            android:layout_marginTop="5dp"
            android:layout_height="17dp"
            android:background="@color/colorP"
            android:id="@+id/color4"
            android:layout_below="@id/color3"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispatched"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv3"
            android:textSize="12dp"
            android:layout_toRightOf="@id/color4"
            android:id="@+id/tv4"
            />
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorP"
            android:id="@+id/color5"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/color5"
            android:id="@+id/tv5"
            />
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorP"
            android:id="@+id/color6"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/color5"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cancelled"
            android:textSize="12dp"
            android:layout_below="@id/color5"
            android:layout_toRightOf="@id/color6"
            android:id="@+id/tv6"
            />
        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorP"
            android:id="@+id/color7"
            android:layout_below="@id/color6"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denied"
            android:layout_below="@id/tv6"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/color7"
            android:id="@+id/tv7"
            />

    </RelativeLayout>
</RelativeLayout>